@model ICollection<LMS.Models.Book>

@{
    ViewBag.Title = "Inactive Books";
    ViewBag.TitleSmall = "Not Loaned in Last 31 Days";
}

<div class="row">
    <div class="col-md-12">
        <div class="box">
            <div class="box-body">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>
                                Book Name
                            </th>
                            <th>
                                ISBN
                            </th>
                            <th>
                                Number of Copies
                            </th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @item.Name
                                </td>
                                <td>
                                    @item.ISBN
                                </td>
                                <td>
                                    @item.Copies.Count()
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
