@model LMS.ViewModels.UserViewModel

@{
    ViewBag.Title = "User";
	ViewBag.TitleSmall = "Delete";
}
<div class="row">
    <div class="col-md-6">
        <div class="box box-danger">
            <div class="box-header with-border">
                <h3 class="box-title">Are you sure you want to delete this user?</h3>
            </div>

            @using (Html.BeginForm())
            {
                <div class="box-body">

                    @Html.AntiForgeryToken()
					<dl class="dl-horizontal">
						<dt>
							ID
						</dt>

						<dd>
							@Model.ID
						</dd>

						<dt>
							Name
						</dt>

						<dd>
							@Model.Name
						</dd>

						<dt>
							Email
						</dt>

						<dd>
							@Model.Email
						</dd>
                    </dl>
                </div>
                <div class="box-footer">
                    <a class="btn btn-warning btn-sm" href="@Url.Action("Index")"><i class="fa fa-angle-double-left"> </i> Back to List</a>
                    <button type="submit" class="btn btn-danger pull-right"><i class="fa fa-trash"></i> Delete</button>
                </div>
            }
        </div>
    </div>
</div>
